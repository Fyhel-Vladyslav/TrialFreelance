@using Microsoft.AspNetCore.Identity
@model IEnumerable<TrialFreelance.Entities.DbUser>

@{
    ViewBag.Title = "All Users";
}



<div style="display:flex; flex-direction:column; margin-top:70px;color:#fff;">
    <h1>All Users</h1>
@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div style="margin-bottom:50px;">
            <div class="card mb-3">
                    <div style="color:#fff; background-color:#101414" class="card-header">
                    <h5 class="card-title">@user.UserName</h5>
                </div>
            </div>
                <div class="card-body">
                User Id: @user.Id
            </div>
                <div class="card-footer" style="display:flex; flex-direction:row;">
                <a class="btn btn-primary" asp-action="EditUser" asp-controller="Account" asp-route-id="@user.Id">Edit</a>
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                <a asp-action="UserOrders" asp-controller="Order" asp-route-id="@user.Id" class="btn btn-primary">User Orders</a>
                <a asp-action="UserSolutions" asp-controller="Solution" asp-route-id="@user.Id" class="btn btn-danger">User Solutions</a>
                <a asp-action="UserMessages" asp-controller="Message" asp-route-id="@user.Id" class="btn btn-primary">User Messages</a>
                <a asp-action="AddMessage" asp-controller="Message" asp-route-id="@user.Id" class="btn btn-danger">Send Message</a>
            </div>
        </div>

    }
}
else
{
    <div class="card ">
        <div class="card-header"> Ще не створено користувачів </div>
        <div class=" card - body ">
            <h5 class="card-title"> Скористайтеся кнопкою нижче щоб створити користувача</h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Account" asp-action="Register">Реєстрація</a>
        </div>
    </div>
}
</div>
