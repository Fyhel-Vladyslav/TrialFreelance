@model TrialFreelance.ViewModels.EditUserViewModel

@{

  
    ViewBag.Title = "Edit User";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<style>
    body {
        background-color: #101414;
    }

    .form-control {
        min-width: 100% !important;
    }
    .card {
        background-color: #21262d;
        color: #fff;
    }
    .nav-body{
        padding-left: 0%;
        padding-right: 0%;
    }

    .btn-group {
        min-width: 100%;
    }
</style>
<div class="main-field" style="width:100%;height:100%;    margin-top: 100px;">

    <div class="container text-center">
        <div class="btn-group" role="group" aria-label="Basic example">
            <a href="/Solution/UserSolutions" type="button" class="btn btn-primary">Переглянути мої виконані замовлення</a>
            <a href="/Order/UserOrders" type="button" class="btn btn-primary border-start">My orders</a>
        </div>
    </div>
<form method="post" class="mt-3">
        <div class="container">
    <div class="form-group row" style="">
        <input asp-for="Id" hidden>
            <label asp-for="UserName" style="color:#fff" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
                    <input class="bg-secondary text-white border-0 " asp-for="UserName" style="    margin-top: 6px;color:#fff">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="card">
        <div class="card-header"><h3>Users personal data</h3></div>
        <div class="card-body">

            <div class="col-sm-2 col-form-label" style="white-space: nowrap;">Ви завершили :@Model.FinishedOrders замовлень</div>
           
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                    <input class="form-control bg-secondary text-white border-0" asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                    <input class="form-control bg-secondary text-white border-0" asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
                <label asp-for="Messager" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                    <input class="form-control bg-secondary text-white border-0" asp-for="Messager" class="form-control">
                <span asp-validation-for="Messager" class="text-danger"></span>
            </div>
            <label asp-for="Birthday" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                    <input class="form-control bg-secondary text-white border-0" asp-for="Birthday" class="form-control">
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <label asp-for="GitHubPageLink" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                    <input class="form-control bg-secondary text-white border-0" asp-for="GitHubPageLink" class="form-control">
                <span asp-validation-for="GitHubPageLink" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
</div>