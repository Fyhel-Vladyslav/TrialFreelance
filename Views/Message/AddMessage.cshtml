@model Message

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="container mt-5" style="padding-top:80px;">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Send message</h1>
            <form asp-action="AddMessage" method="post">
                <div asp-validation-summary="All" class="text-danger"> </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.UserId">UserId</label>
                    <input type="number" asp-for="@Model.UserId" class="form-control" />
                    <span asp-validation-for="@Model.UserId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.MesText">MesText</label>
                    <input type="text" asp-for="@Model.MesText" class="form-control" />
                    <span asp-validation-for="@Model.MesText" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.SolutionId">SolutionId</label>
                    <input type="number" asp-for="@Model.SolutionId" class="form-control" />
                    <span asp-validation-for="@Model.SolutionId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Send message</button>
                </div>
            </form>
        </div>
    </div>
</div>