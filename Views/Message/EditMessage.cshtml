@model TrialFreelance.ViewModels.MessageViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="container mt-5" style="padding-top:41px;">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Edit solution</h1>
            <form asp-action="EditMessage" method="post">
                <div asp-validation-summary="All" class="text-danger"> </div>
                <input type="hidden" asp-for="@Model.Id" />
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.UserId">Id of User</label>
                    <input type="number" asp-for="@Model.UserId" class="form-control" />
                    <span asp-validation-for="@Model.UserId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.OrderId">OrderId</label>
                    <input type="text" asp-for="@Model.OrderId" class="form-control" />
                    <span asp-validation-for="@Model.OrderId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.MesText">MesText</label>
                    <input type="text" asp-for="@Model.MesText" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.PostDate">PostDate</label>
                    <input type="text" asp-for="@Model.PostDate" class="form-control" />
                    <span asp-validation-for="@Model.PostDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    @if (Model.isRead)
                    {<div>User Read it</div>}
                    else
                        {<div>User didn't Read it</div>}
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.MesType">MesType</label>
                    <input type="number" asp-for="@Model.MesType" class="form-control" />
                    <span asp-validation-for="@Model.MesType" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.SolutionId">SolutionId</label>
                    <input type="number" asp-for="@Model.SolutionId" class="form-control" />
                    <span asp-validation-for="@Model.SolutionId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>