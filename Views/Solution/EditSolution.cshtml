@model TrialFreelance.ViewModels.EditSolutionViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Edit solution</h1>
            <form asp-action="EditSolution" method="post">
                <div asp-validation-summary="All" class="text-danger"> </div>
                <input type="hidden" asp-for="@Model.Id" />
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.CreatorId">Id of creator</label>
                    <input type="number" asp-for="@Model.CreatorId" class="form-control" />
                    <span asp-validation-for="@Model.CreatorId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.GitHubLink">GitHubLink</label>
                    <input type="text" asp-for="@Model.GitHubLink" class="form-control" />
                    <span asp-validation-for="@Model.GitHubLink" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Description">Description</label>
                    <input type="text" asp-for="@Model.Description" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.OrderId">Id of order</label>
                    <input type="number" asp-for="@Model.OrderId" class="form-control" />
                    <span asp-validation-for="@Model.OrderId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>